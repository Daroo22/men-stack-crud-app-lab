<!-- views/cars/index.ejs -->

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Cars Index</title>
    <a href="/cars/new">Add New Car</a>
  </head>
  <body>
    <h1>All Cars</h1>
    <ul>
      <% cars.forEach(car => { %>
        <li>
          <a href="/cars/<%= car._id %>"> <%= car.name %> </a>
        </li>
      <% }); %>
    </ul>
    <a href="/">Back Home</a>
  </body>
</html>
